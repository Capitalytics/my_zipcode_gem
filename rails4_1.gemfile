source 'https://rubygems.org'

gemspec
gem 'rails', '~> 4.1.0'

# jquery-rails is used by the dummy application
gem 'jquery-rails'
gem 'sqlite3'
gem 'mysql2'
gem 'pg'
gem 'railties'

group :test do
  gem 'capybara', '~> 2.0.2'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'shoulda', '~> 3.3.0'
  gem 'rspec'
  gem 'rspec-rails', '~> 2.12.0'
  gem 'cucumber'
  gem 'cucumber-rails', '~> 1.3.0', require: false
end
